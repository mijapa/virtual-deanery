<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".student.dormitory.MenuDormitoryActivity"
    tools:showIn="@layout/activity_menu_dormitory">


    <Button
        android:id="@+id/application_for_a_dormitory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/button4"
        android:onClick="onClick"
        android:text="@string/application_for_a_dormitory"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />

    <Button
        android:id="@+id/reservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/application_for_a_dormitory"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/button4"
        android:onClick="onClick"
        android:text="@string/reservations"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />

    <Button
        android:id="@+id/accommodation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reservations"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/button4"
        android:onClick="onClick"
        android:text="@string/accommodation"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />

    <Button
        android:id="@+id/history_about_dorms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accommodation"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/button4"
        android:onClick="onClick"
        android:text="@string/history_about_dorms"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%" />

</android.support.percent.PercentRelativeLayout>